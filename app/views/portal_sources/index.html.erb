<p id="notice"><%= notice %></p>

<h1>Portal Sources</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portal_sources.each do |portal_source| %>
      <tr>
        <td><%= portal_source.name %></td>
        <td><%= portal_source.size %></td>
        <td><%= link_to 'Show', portal_source %></td>
        <td><%= link_to 'Edit', edit_portal_source_path(portal_source) %></td>
        <td><%= link_to 'Destroy', portal_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

