
  <%= simple_form_for(@article) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :headline %>
      <%= f.input :textonly %>
      <%= f.input :date_published %>
      <%= f.input :textorig %>
      <%= f.association :portal_source, include_blank: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
